<!DOCTYPE web-app PUBLIC   "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"  
	"http://java.sun.com/dtd/web-app_2_4.dtd">
<web-app>
	<display-name>Hello World</display-name>
	<description>Hello World Web Application</description>
	

    
	<servlet>
		 <servlet-name>StudentClient</servlet-name>
		 <servlet-class>samples.bmp.student.StudentClient</servlet-class>
	</servlet>

	<servlet-mapping>
		 <servlet-name>StudentClient</servlet-name>
		 <url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
    	<!-- Welcome File List -->
    	<welcome-file-list>
    	    <welcome-file>index.html</welcome-file>
    	</welcome-file-list>
    	
 	<ejb-ref>
	  <ejb-ref-name>ejb/bmpStudent</ejb-ref-name>
	  <ejb-ref-type>Session</ejb-ref-type>
	  <home>samples.bmp.student.StudentHome</home>
	  <remote>samples.bmp.student.Student</remote>
	</ejb-ref>    	
	

</web-app>
